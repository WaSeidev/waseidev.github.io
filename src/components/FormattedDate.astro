---
interface Props {
  date: Date;
  showDay?: boolean;
}

const { date, showDay } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    showDay
      ? date.toLocaleDateString("es-co", {
          year: "numeric",
          month: "short",
          day: "2-digit",
        })
      : date.toLocaleDateString("es-co", {
          year: "numeric",
          month: "short",
        })
  }
</time>
