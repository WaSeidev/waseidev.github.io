---
import { Image } from "astro:assets";

const { basics } = Astro.props;
---

<section class="flex flex-col items-center justify-around gap-2 md:flex-row">
  <div class="flex flex-col gap-2 md:max-w-screen-sm">
    <h1
      class="text-2xl font-bold uppercase leading-none tracking-wider sm:text-4xl"
    >
      {basics.name}
    </h1>
    <div class="hidden md:block">
      <h2 class="text-xl font-light">{basics.label}</h2>
      <div class="flex gap-4 my-2">
        <a
          class="min-w-10 rounded border bg-gray-300 px-2 py-1 dark:bg-gray-700"
          href="/cv">Visit my CV</a
        >
        <a
          class="min-w-10 rounded border bg-gray-300 px-2 py-1 dark:bg-gray-700"
          href={`mailto:${basics.email}`}>Email me</a
        >
      </div>
    </div>
  </div>
  <Image
    src={basics.image}
    width={400}
    height={400}
    class="h-72 w-72 rounded-full object-cover md:order-2"
    alt={basics.name}
  />
  <div class="block space-y-2 md:hidden">
    <h2 class="text-center text-xl font-light">{basics.label}</h2>
    <div class="flex items-center justify-center gap-4 my-2">
      <a
        class="min-w-10 rounded border bg-gray-300 px-2 py-1 dark:bg-gray-700"
        href="/cv">Visit my CV</a
      >
      <a
        class="min-w-10 rounded border bg-gray-300 px-2 py-1 dark:bg-gray-700"
        href={`mailto:${basics.email}`}>Email me</a
      >
    </div>
  </div>
</section>
