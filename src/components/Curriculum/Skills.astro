---
import type { Skill } from "@/types/cv";
import TitleCV from "./TitleCV.astro";
import Pill from "@/components/Pill.astro";

interface Props {
  skills: Skill[];
  title: string;
}
const { skills, title } = Astro.props;
---

<section>
  <TitleCV>{title}</TitleCV>
  <ul class="my-2 space-y-4">
    {
      skills.map((skill) => (
        <li>
          <h3 class="text-2xl print:text-xl">{skill.name}</h3>
          <h4 class="text-xl print:text-lg">{skill.level}</h4>
          <ul class="flex flex-wrap gap-2">
            {skill.keywords.map((keyword) => (
              <Pill>{keyword}</Pill>
            ))}
          </ul>
        </li>
      ))
    }
  </ul>
</section>
