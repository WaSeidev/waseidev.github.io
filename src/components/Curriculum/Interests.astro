---
import type { Interest } from "@/types/cv";
import TitleCV from "./TitleCV.astro";
import Pill from "@/components/Pill.astro";

interface Props {
  interests: Interest[];
  title: string;
}

const { interests, title } = Astro.props;
---

<section>
  <TitleCV>{title}</TitleCV>
  <ul class="space-y-2">
    {
      interests.map(({ name, keywords }) => (
        <li>
          <h4 class="text-lg">{name}</h4>
          <ul class="flex flex-wrap gap-2">
            {keywords.map((keyword) => (
              <Pill>{keyword}</Pill>
            ))}
          </ul>
        </li>
      ))
    }
  </ul>
</section>
