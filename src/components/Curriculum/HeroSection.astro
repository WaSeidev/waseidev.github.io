---
import type { Basics } from "@/types/cv";
import { Image } from "astro:assets";

interface Props {
  basics: Basics;
}

const { basics } = Astro.props;
---

<section class="flex gap-7 flex-1">
  <div class="flex flex-col justify-center flex-1">
    <h1 class="w-full text-5xl print:text-2xl font-semibold">{basics.name}</h1>
    <h2 class="w-full text-2xl print:text-lg font-light">{basics.label}</h2>
  </div>
  <div class="flex">
    <Image
      src={basics.image}
      class="h-56 w-56 print:h-28 print:w-28 rounded-lg"
      alt={basics.name}
      width={300}
      height={300}
    />
  </div>
</section>
