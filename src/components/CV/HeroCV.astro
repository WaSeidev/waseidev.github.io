---
import type { Basics } from "@/cv";
import { Image } from "astro:assets";
type Props = {
  basics: Basics;
};
const { basics } = Astro.props;
const { name, label, image } = basics;
---

<div class="flex items-center">
  <div class="w-full">
    <h1 class="mb-2 text-5xl font-bold">{name}</h1>
    <h2 class="text-pretty text-lg font-light">{label}</h2>
  </div>
  <figure class="w-auto">
    <Image
      width={36}
      height={36}
      src={image}
      alt="The image of {name}"
      class="w-36 rounded-lg"
    />
  </figure>
</div>
