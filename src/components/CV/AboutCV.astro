---
import TitleCV from "./TitleCV.astro";
import AboutItemCV from "./AboutItemCV.astro";
import type { Basics } from "@/cv";
type Props = {
  basics: Basics;
  title: string;
};

const { basics, title } = Astro.props;
const { email, phone, url, location, profiles } = basics;
---

<TitleCV {title} />
<article class="flex flex-col gap-2">
  <AboutItemCV
    href={`https://google.com/maps/place/${location.city}`}
    text={`${location.city}, ${location.countryCode}`}
    icon="location"
  />
  <AboutItemCV href={`tel:${phone}`} text={phone} icon="phone" />
  <AboutItemCV href={`https://${url}`} text={url} icon="web" />
  <AboutItemCV href={`mailto:${email}`} text={email} icon="email" />
  {
    profiles.map(
      ({
        url,
        username,
        network,
      }: {
        url: string;
        username: string;
        network: string;
      }) => (
        <AboutItemCV href={url} text={username} icon={network.toLowerCase()} />
      ),
    )
  }
</article>
