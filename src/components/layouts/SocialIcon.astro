---
import { Icon } from "astro-icon/components";
interface Props {
  name: string;
  href: string;
}
const { name, href } = Astro.props;
---

<li class="flex items-center justify-center">
  <a
    href={href}
    target="_blank"
    class="p-1 rounded bg-gray-50 hover:shadow transition-shadow duration-300 ease-in-out dark:bg-gray-700 dark:text-gray-50"
  >
    <Icon name={name} class="h-5 w-5" />
  </a>
</li>
