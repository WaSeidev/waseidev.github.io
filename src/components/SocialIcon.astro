---
import { Icon } from "astro-icon/components";
interface Props {
  name: string;
  href: string;
}
const { href, name } = Astro.props;
---

<a
  class="relative cursor-pointer rounded transition-all duration-300 ease-in-out hover:shadow-lg"
  href={href}
  target="_blank"
>
  <span class="sr-only">Follow Astro on Mastodon</span>
  <Icon name={`mdi:${name}`} width={32} height={32} />
</a>
