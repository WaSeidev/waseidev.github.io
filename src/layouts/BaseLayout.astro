---
import NavHeader from "@/components/layouts/NavHeader.astro";
import Footer from "@/components/layouts/Footer.astro";
import Header from "@/components/Header.astro";
import { getLangFromUrl } from "@/i18n/utils";
const { title, description, image } = Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<html {lang}>
  <Header {title} {description} {image} />
  <body
    class="flex w-full justify-center bg-gray-50 dark:bg-gray-950 text-gray-900 dark:text-gray-50"
  >
    <main class="flex min-h-screen w-full flex-col md:max-w-6xl">
      <NavHeader />
      <section class="flex-1 p-4">
        <slot />
      </section>
      <Footer />
    </main>
  </body>
</html>
