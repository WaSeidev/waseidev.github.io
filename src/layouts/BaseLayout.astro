---
import BaseHead from "@/components/Layout/BaseHead.astro";
import Header from "@/components/Layout/Header.astro";
import LanguagePicker from "@/components/Layout/LanguagePicker.astro";
import SocialIcons from "@/components/Layout/SocialIcons.astro";
import { getLangFromUrl } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <BaseHead />
  <body>
    <main class="min-h-screen w-full">
      <section class="mx-auto flex min-h-screen w-full max-w-6xl flex-col">
        <Header />
        <main class="my-4 flex-1">
          <slot />
        </main>
        <footer class="flex w-full rounded-t-lg bg-gray-100">
          <nav class="mx-auto my-4 flex gap-4">
            <SocialIcons />
            <LanguagePicker />
          </nav>
        </footer>
      </section>
    </main>
  </body>
</html>
