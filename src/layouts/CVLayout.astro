---
import BaseHead from "@/components/Layout/BaseHead.astro";

interface Props {
  title?: string;
  description?: string;
  pubDate?: Date;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead {title} {description} {image} />
  </head>
  <body class="my-12 flex w-full justify-center">
    <main
      class="block w-full max-w-4xl border border-t-[10px] border-t-[#56817A;] px-8 py-9 shadow-lg"
    >
      <slot />
    </main>
  </body>
</html>
